<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/vehicle_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="2dp"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <TableLayout
        android:id="@+id/table4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:stretchColumns="*">

        <TableRow >
            <Button
                android:id="@+id/btCurrInf"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_marginRight="2dp"
                android:background="@android:color/holo_blue_dark"
                android:text="当前信息"></Button>

            <Button
                android:id="@+id/btHistoryInf"
                android:layout_marginRight="2dp"
                style="@style/Widget.AppCompat.Button.Colored"
                android:background="@android:color/holo_blue_dark"
                android:text="历史信息"></Button>
            <Button
                android:id="@+id/btECUInf"
                android:layout_marginRight="2dp"
                style="@style/Widget.AppCompat.Button.Colored"
                android:background="@android:color/holo_blue_dark"
                android:text="设备信息"></Button>
        </TableRow>
        <TableRow
            android:layout_marginTop="10dp">
            <Button
                android:id="@+id/btClearScreen"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_marginRight="2dp"
                android:background="@android:color/holo_blue_dark"
                android:text="清除屏幕"></Button>
            <Button
                android:id="@+id/btClearDataset"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_marginRight="2dp"
                android:background="@android:color/holo_blue_dark"
                android:text="清除历史储存"></Button>

            <Button
                android:id="@+id/btClearDTC"
                style="@style/Widget.AppCompat.Button.Colored"
                android:background="@android:color/holo_blue_dark"
                android:text="清除故障"></Button>
        </TableRow>
    </TableLayout>


    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:stretchColumns="*">
        <TableRow
            android:background="@drawable/textview_border2">

            <EditText
                android:id="@+id/txtFaultNO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_span="2"
                android:ems="10"
                android:hint="故障码编号"
                android:inputType="number"
                />

            <Button
                android:id="@+id/btClearCode"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_marginRight="5dp"
                android:background="@android:color/holo_blue_dark"
                android:text="清除故障码"></Button>
        </TableRow>
    </TableLayout>


    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:stretchColumns="0">
        <TableRow
            android:background="@drawable/textview_border2">

            <EditText
                android:id="@+id/txtCeshi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_span="2"
                android:ems="10"
                android:hint="AT指令测试"
                android:inputType="text"
                />
            <Button
                android:id="@+id/btSelectCmd"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_marginRight="5dp"
                android:background="@android:color/holo_blue_dark"
                android:text="选择"></Button>

            <Button
                android:id="@+id/btCeshi"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_marginRight="5dp"
                android:background="@android:color/holo_blue_dark"
                android:text="发送"></Button>
        </TableRow>
    </TableLayout>


</LinearLayout>